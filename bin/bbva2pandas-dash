#!/usr/bin/env python3

import argparse
import os
import sys

try:
    from bbva2pandas_dash import Bbva2PandasDash
except ImportError:
    sys.path.append(os.path.abspath("./"))
    from bbva2pandas_dash import Bbva2PandasDash


def main(directory):
    app = Bbva2PandasDash(directory)
    app.start()


if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Prints BBVA reports PDF files")
    parser.add_argument("directory", help="Directory of the PDF files")
    args = vars(parser.parse_args())
    main(**args)
